
window {
  margin: 0px;
  border: 5px solid #303347;
  background-color: #14151e;
  font-family: "JetBrains Mono Nerd Font";
  font-size: 13px;
}


#input {
  all: unset;
  min-height: 36px;
  padding: 4px 10px;
  margin: 4px;
  border: none;
  color: #a6accd;
  font-weight: bold;
  background-color: #14151e;
  outline: none;
  border-radius: 15px;
  margin: 10px;
  margin-bottom: 2px;
}

#inner-box {
  margin: 4px;
  padding: 10px;
  font-weight: bold;
  border-radius: 15px;
}

#outer-box {
  margin: 0px;
  padding: 3px;
  border: none;
  border: 5px solid #14151e;
}

#text:selected {
  color: #14151e;
  margin: 5px 1px;
  border: none;
  border-radius: 15px;
}

#text:unselected {
  color: #a6accd;
  margin: 5px 1px
  border: none;
  border-radius: 15px;
}
#entry {
  margin: 1px 1px;
  border: none;
  border-radius: 15px;
  background-color: transparent;
}

#entry:selected {
  margin: 1px 1px;
  border: none;
  border-radius: 15px;
  background: #a6accd; 
}
