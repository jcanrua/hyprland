* {
  transition: 0.2s;
}

window {
	font-family: "JetBrains Mono Nerd Font";
	font-size: 13px;
}

window {
    margin: 0px;
    border: none;
    background-color: #131621;
    border-radius: 10px;
}

#input {
    padding: 4px;
    margin: 20px;
    padding-left: 20px;
    border: none;
    font-weight: bold;
    color: #000000;
    background: #00ff99;
    border-radius:10px;
}

#input image {
    color: #000000;
}

#input:focus {
    border: 0px solid #000000;
        outline: #000000;

    background: #00ff99;
}

#inner-box {
    margin: 20px;
    margin-top: 0px;
    border: none;
    color: #fff;
    border-radius: 10px;
}

#inner-box * {
    transition: none;
}

#outer-box {
    margin: 0px;
    border: none;
    padding: 0px;
    border-radius: 10px;
}

#scroll {
    margin-top: 5px;
    border: none;
    border-radius: 10px;
    margin-bottom: 5px;
}

#text:selected {
    color: #000000;
    font-weight: bold;
}


#img {
    margin-right: 20px;
    background: transparent;
}

#text {
    margin: 0px;
    border: none;
    padding: 0px;
    background: transparent;
}

#entry {
    margin: 0px;
    border: none;
    border-radius: 10px;
    background-color: transparent;
    min-height:32px;
    font-weight: bold;
}

#entry:selected {
    outline: none;
    margin: 0px;
    border: none;
    border-radius: 10px;
    background: #00ff99;
}
